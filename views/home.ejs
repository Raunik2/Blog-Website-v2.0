<%- include("partials/header") -%>

<h1>Home</h1>
<p>
    <form action="/compose">
        <button class="btn btn-success comp" type="submit">Compose +</button>
    </form>

    <strong><em><%= homeStartingContent %></em></strong>

    <p><em><strong>All the composed blogs will be displayed here.</strong></em></p>

    <% posts.forEach(element => { %>
    <h2> <%= element.title%></h2>
    <form action="/delete" method="post">
        <button name="givenId" class="btn btn-warning" type="submit"  value="<%= element._id%>">Delete</button>
    </form>
    
    <p><%=  element.content.slice(0,25)+"..." %><a href="/posts/<%= element._id %>">Read more</a></p>
    <% }) %>

</p>
<%- include("partials/footer") -%>